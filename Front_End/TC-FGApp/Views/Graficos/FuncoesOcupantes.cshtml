
@{
    ViewData["Title"] = "FuncoesOcupantes";
}

<h1>FuncoesOcupantes</h1>

<div class="row">
    <div class="col-md-8">
        <canvas id="grafico"></canvas>
    </div>
</div>


<!-- Chart plugin JavaScript-->
<script src="~/lib/chart.js/Chart.min.js"></script>

<script type="text/javascript">
    var ctx = $("#grafico");
    var myLineChart = new Chart(ctx, {
        type: 'horizontalBar',
        data: {
            labels: ["Janeiro", "Fevereiro", "Março", "Abril", "Maio", "Junho"],
            datasets: [{
                label: "Total Cargos",
                backgroundColor: "rgba(2,117,216,1)",
                borderColor: "rgba(2,117,216,1)",
                data: [4215, 5312, 6251, 7841, 9821, 14984],
            }],
        },
        options: {
            scales: {
                xAxes: [{
                    time: {
                        unit: 'month'
                    },
                    gridLines: {
                        display: false
                    },
                    ticks: {
                        maxTicksLimit: 6
                    }
                }],
                yAxes: [{
                    ticks: {
                        min: 0,
                        max: 15000,
                        maxTicksLimit: 5
                    },
                    gridLines: {
                        display: true
                    }
                }],
            },
            legend: {
                display: false
            }
        }
    });
</script>
