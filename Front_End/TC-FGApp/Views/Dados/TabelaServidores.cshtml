@model List<DataBaseFramework.DataModel.FiliadosFuncionariosDTO>

@{
    ViewData["Title"] = "Tabela Servidores";
}

<link rel="stylesheet" href="~/lib/datatables/datatables.css">

<script type="text/javascript" src="~/lib/datatables/datatables.js"></script>

<div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white mr-2">
            <i class="mdi mdi-table-large"></i>
        </span> Tabela Servidores
    </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Home">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Tabela Servidores</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <table id="tableServidores" class="table table-striped">
                    <thead>
                        <tr>
                            <th> Ano </th>
                            <th> Mês </th>
                            <th> Partido </th>
                            <th> Função </th>
                            <th> Sigla </th>
                            <th> Quantidade </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Ano</td>
                                <td>@item.MesFormatado</td>
                                <td>@item.Partido</td>
                                <td>@item.Funcao</td>
                                <td>@item.Sigla</td>
                                <td>@item.Quantidade</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("#tableServidores").DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Portuguese-Brasil.json"
        }
    });
</script>
