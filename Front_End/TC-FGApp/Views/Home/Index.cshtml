@model DashboardVM

@{
    ViewData["Title"] = "Home Page";
}

<style>
    .card-img-holder {
        cursor: pointer;
    }

    .card .card-title {
        text-align: center;
    }

    .padding-minimo {
        padding-bottom: 55pt !important;
    }
</style>

<div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white mr-2">
            <i class="mdi mdi-home"></i>
        </span> Dashboard
    </h3>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body card-grafico" style="max-height:380px;">
                <a href="/Graficos/ServidoresFiliados">
                    <h4 class="card-title">
                        Número de Servidores em Cargos Comissionados que São Filiados a um partido político
                        <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle my-popover" data-content="Demonstrativo temporal do conjunto resultante das associações." rel="popover" data-placement="right"></i>
                    </h4>
                </a>
                <canvas id="areaChart"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="row">

    <div class="col-xl-3 col-md-6 stretch-card grid-margin">
        <div class="card bg-gradient-danger card-img-holder text-white" onclick="window.location.href = '/Graficos/DistribuicaoFuncoes';">
            <div class="card-body">
                <img src="~/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">
                    Estado Com mais Filiados
                </h4>
                <h2 class="mb-5">São Paulo</h2>
                <h6 class="card-text">3.314 Filiados</h6>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 stretch-card grid-margin">
        <div class="card bg-gradient-info card-img-holder text-white" onclick="window.location.href = '/Graficos/PartidosServidores';">
            <div class="card-body">
                <img src="~/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">
                    Partido Com mais Filiados
                </h4>
                <h2 class="mb-5">PT</h2>
                <h6 class="card-text">3.224 Filiados</h6>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 stretch-card grid-margin">
        <div class="card bg-gradient-success card-img-holder text-white" onclick="window.location.href = '/Dados/TabelaResultados';">
            <div class="card-body">
                <img src="~/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">
                    Total Servidores Públicos
                </h4>
                <h2 class="mb-5">786.989</h2>
                <h6 class="card-text">96.391 em Cargos Comissionados</h6>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 stretch-card grid-margin">
        <div class="card bg-gradient-primary card-img-holder text-white" onclick="window.location.href = '/Dados/TabelaResultados';">
            <div class="card-body">
                <img src="~/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">
                    Total Relações (12/2018)
                </h4>
                <h2 class="mb-5">22.272</h2>
                <h6 class="card-text">+95 (11/2018)</h6>
            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body card-grafico" style="max-height:350px;">
                <a href="/Graficos/PartidosServidores">
                    <h4 class="card-title">
                        Partidos Servidores 2018 (Top 5)
                        <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle my-popover" data-content="Número de ocupantes relacionados dos cinco partidos com mais registros." rel="popover" data-placement="right"></i>
                    </h4>
                </a>
                <canvas id="pieChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body card-grafico" style="max-height:350px;">
                <a href="/Graficos/FuncoesOcupantes">
                    <h4 class="card-title">
                        Funções x Ocupantes 2018 (Top 5)
                        <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle my-popover" data-content="Número de ocupantes relacionados das cinco funções com mais registros." rel="popover" data-placement="right"></i>
                    </h4>
                </a>
                <canvas id="barChart"></canvas>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body card-grafico" style="max-height:350px;">
                <h4 class="card-title">
                    Gasto Anual com Servidores
                    <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle my-popover" data-content="Gasto total com servidores públicos em cada ano." rel="popover" data-placement="right"></i>
                </h4>
                <canvas id="gastoChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body card-grafico" style="max-height:350px;">
                <h4 class="card-title">
                    Gasto por Função 2018
                    <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle my-popover" data-content="Gasto total com servidores das cinco maiores funções no decorrer dos meses." rel="popover" data-placement="right"></i>
                </h4>
                <canvas id="gastoFuncaoChart"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body card-grafico" style="max-height:380px;">
                <a href="/Graficos/ServidoresFiliados">
                    <h4 class="card-title">
                        Relação entre Servidores em Cargos Comissionados e Eleitores Filiados a Partidos Políticos
                        <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle my-popover" data-content="Demonstrativo transposto do conjunto resultante das associações." rel="popover" data-placement="right"></i>
                    </h4>
                </a>
                <canvas id="transpostoChart"></canvas>
            </div>
        </div>
    </div>
</div>
<!-- content-wrapper ends -->

<script type="text/javascript" src="~/js/chart.js?v=201911131606"></script>
<script type="text/javascript">
    $(function () {
        $(".my-popover").popover({ trigger: "hover" });
    })
</script>