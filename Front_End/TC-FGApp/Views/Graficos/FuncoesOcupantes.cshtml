@model List<DataBaseFramework.DataModel.FiliadosFuncionariosDTO>

@{
    ViewData["Title"] = "Funções x Ocupantes";
}

<div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white mr-2">
            <i class="mdi mdi-chart-gantt"></i>
        </span> Funções x Ocupantes
    </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Home">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Funções x Ocupantes</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body card-grafico">
                <canvas id="grafico" style="width: 100%; height: 1000px; max-height: 1000px;"></canvas>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@0.7.0"></script>

<script type="text/javascript">
    var ctx = $("#grafico").get(0).getContext("2d");;
    var myLineChart = new Chart(ctx, {
        type: 'horizontalBar',
        data: {
            labels:
            @(Json.Serialize(Model.Select(i => i.Funcao).ToArray())),
            datasets: [{
                label: "Total Cargos",
                backgroundColor: "rgba(182, 109, 255, 0.8)",
                borderColor: "rgba(182, 109, 255, 1)",
                borderWidth: 1,
                data:
                @(Json.Serialize(Model.Select(i => i.Quantidade).ToArray())),
            }],
        },
        options: {
            scales: {
                xAxes: [{
                    time: {
                        unit: 'Ocupantes'
                    }
                }]
            },
            legend: {
                display: false
            },
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                datalabels: {
                    align: 'end',
                    anchor: 'end',
                    backgroundColor: "rgba(182, 109, 255, 1)",
                    borderRadius: 4,
                    color: 'white',
                    formatter: Math.round
                }
            }
        }
    });
</script>
